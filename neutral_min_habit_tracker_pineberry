<body>
  <div class="habit-tracker">
    <div class="habit-rectangle">
      <div id="habitGrid" class="habit-grid"></div>
    </div>
    <div class="habit-controls">
      <button id="resetButton" class="habit-button">Reset</button>
    </div>
  </div>

  <script>
    const grid = document.getElementById('habitGrid');
    const resetButton = document.getElementById('resetButton');

    const TOTAL_SQUARES = 30;
    const MAX_STATE = 3;

    // Create 30 squares
    for (let i = 0; i < TOTAL_SQUARES; i++) {
      const square = document.createElement('div');
      square.classList.add('habit-square');
      square.setAttribute('data-state', '0');

      square.addEventListener('click', () => {
        let current = parseInt(square.getAttribute('data-state'), 10);
        let next = (current + 1) % (MAX_STATE + 1);
        square.setAttribute('data-state', String(next));
      });

      grid.appendChild(square);
    }

    // Reset all squares
    resetButton.addEventListener('click', () => {
      document.querySelectorAll('.habit-square').forEach(sq => {
        sq.setAttribute('data-state', '0');
      });
    });
  </script>
</body>
